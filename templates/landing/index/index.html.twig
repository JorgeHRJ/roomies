{% extends 'base.html.twig' %}

{% page_setup {
    'title': 'titles.landing'|trans({}, 'messages'),
    'body': {
        'class': 'bg-primary'
    }
} %}

{% block body %}
    <div class="container pt-4 text-white">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-1">Roomies</h1>
                <div class="mb-5">
                    <h2 class="h3 text-muted mr-3">{{ 'landing.subtitle'|trans({}, 'landing') }}</h2>
                </div>
                <div class="d-flex justify-content-center align-items-end flex-wrap mb-6">
                    <a href="{{ path('security_login') }}" class="btn btn-secondary text-dark mr-4 mb-3 mb-lg-0">
                        <span class="fas fa-sign-in-alt mr-1"></span> {{ 'landing.login'|trans({}, 'landing') }}
                    </a>
                    <a href="{{ path('security_register') }}" class="btn btn-secondary text-dark mr-4 mb-3 mb-lg-0">
                        <span class="fas fa-user-plus mr-1"></span> {{ 'landing.register'|trans({}, 'landing') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
