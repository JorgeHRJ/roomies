{% extends 'base.html.twig' %}

{% page_setup {
    'title': 'security.login.title'|trans({}, 'security'),
    'body': {
        'class': 'bg-primary'
    }
} %}

{% block body %}
    <section class="vh-lg-100 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center form-bg-image">
                <div class="col-sm-12 d-flex align-items-center justify-content-center">
                    <div class="row bg-white shadow-soft border rounded border-light">
                        <div class="col-sm-6">
                            <img src="{{ asset('build/images/login.png') }}"
                                 alt="{{ 'security.login.title'|trans({}, 'security') }}">
                        </div>
                        <div class="col-sm-6 my-3 my-lg-0 p-4 p-lg-5 w-100 fmxw-500">
                            <div class="text-center text-md-center mb-4 mt-md-0">
                                <h1 class="mb-0 h3">{{ 'security.login.title'|trans({}, 'security') }}</h1>
                            </div>
                            {% if error is defined and error is not empty %}
                                <div class="alert alert-danger alert-dismissible bg-danger text-white border-0" role="alert">
                                    <strong>{{ error }}</strong>
                                </div>
                            {% endif %}
                            {{ include('components/flash.html.twig') }}
                            <form action="{{ path('security_login') }}" method="post" class="mt-4">
                                <div class="form-group mb-4">
                                    <label for="email">{{ 'security.login.email.label'|trans({}, 'security') }}</label>
                                    <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">
                                        <span class="fas fa-envelope"></span>
                                    </span>
                                        <input type="email"
                                               class="form-control"
                                               placeholder="{{ 'security.login.email.placeholder'|trans({}, 'security') }}"
                                               id="email"
                                               name="_username"
                                               required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-group mb-4">
                                        <label for="password">{{ 'security.login.password.label'|trans({}, 'security') }}</label>
                                        <div class="input-group">
                                        <span class="input-group-text" id="basic-addon2">
                                            <span class="fas fa-unlock-alt"></span>
                                        </span>
                                            <input type="password"
                                                   placeholder="{{ 'security.login.password.label'|trans({}, 'security') }}"
                                                   class="form-control"
                                                   id="password"
                                                   name="_password"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="defaultCheck5">
                                            <label class="form-check-label" for="defaultCheck5">
                                                {{ 'security.login.remember_me_button'|trans({}, 'security') }}
                                            </label>
                                        </div>
                                        <div>
                                            <a href="#" class="small text-right">
                                                {{ 'security.login.lost_password'|trans({}, 'security') }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit"
                                        class="btn btn-block btn-primary"
                                        data-component="button-loader">
                                    {{ 'security.login.login_in_submit'|trans({}, 'security') }}
                                </button>
                            </form>
                            <div class="d-flex justify-content-center align-items-center mt-4">
                            <span class="font-weight-normal">
                                <a href="{{ path('security_register') }}"
                                   class="font-weight-bold">
                                    {{ 'security.login.not_registered'|trans({}, 'security') }}
                                </a>
                            </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
