<div class="row">
    <p>{{ 'home.join.join_message'|trans({}, 'home') }}</p>
    {% set avatar = get_home_avatar(home) %}
    {% if avatar is not empty %}
        {% set placeholder = get_placeholder(avatar) %}
        <img data-src="{{ asset(avatar.path) }}"
                {% if placeholder is not empty %}
                    src="{{ placeholder }}"
                {% endif %}
             class="user-avatar large-avatar mx-auto mb-1 p-0 lazy"
             alt="{{ home.name }}">
    {% else %}
        <span><i class="fas fa-home fa-2x text-primary"></i></span>
    {% endif %}
    <h4>{{ home.name }}</h4>
</div>
<hr>
<div class="row mb-4">
    <a href="{{ path('app_home_join_confirm', {'hash': home.hash}) }}"
       class="btn btn-block btn-primary"
       data-component="button-loader">
        {{ 'home.join.join_confirm'|trans({}, 'home') }}
    </a>
</div>
