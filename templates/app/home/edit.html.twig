{% extends 'layout.html.twig' %}

{% block title %}{{ 'home.title.edit'|trans({}, 'home') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card align-items-center justify-content-center">
                <div class="card-body w-100 fmxw-500">
                    <div class="row">
                        {{ include('components/flash.html.twig') }}
                        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                        <div class="row mb-2">
                            {% set avatar = get_avatar() %}
                            <img class="image-preview"
                                 data-component="image-preview"
                                    {% if avatar is not empty%}
                                src="{{ asset(avatar.path) }}"
                                    {% endif %}/>
                        </div>
                        <div class="form-file text-center mb-2">
                            {{ form_widget(form.avatar, {'attr': {
                                'class': 'form-file-input',
                                'data-component': 'file-input'
                            }}) }}
                            <label class="form-file-label"
                                   for="{{ form.avatar.vars.id }}">
                                <span class="form-file-text">{{ 'home.form.avatar.label'|trans({}, 'home') }}</span>
                                <span class="form-file-button"><span class="fas fa-upload"></span></span>
                            </label>
                        </div>
                        <div class="form-group mb-4">
                            {{ form_label(form.name) }}
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1">
                                    <span class="fas fa-envelope"></span>
                                </span>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            {{ form_label(form.currency) }}
                            <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">
                                        <span class="fas fa-money"></span>
                                    </span>
                                {{ form_widget(form.currency, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <hr>
                        <div class="form-group mb-4">
                            {{ form_widget(form.submit, {'attr': {
                                'class': 'btn btn-block btn-primary',
                                'data-component': 'button-loader'
                            }}) }}
                        </div>
                        {{ form_widget(form._token) }}
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
